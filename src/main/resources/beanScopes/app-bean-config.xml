<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Old school but a cool way to configure beans -->
    <!-- singleton is default value -->
    <bean id="fooSingleton" class="pl.student.beanScopes.FooSingleton" scope="singleton"/>
    <bean id="fooPrototype" class="pl.student.beanScopes.FooPrototype" scope="prototype"/>
</beans>